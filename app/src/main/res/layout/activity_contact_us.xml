<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUs"
    android:background="@color/yellowbg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My LPG"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="40dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:text="My LPG India"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/tips_background"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:onClick="myLPG"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cylinder Booking Links"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="40sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:text="Indane Gas"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/tips_background"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:onClick="onlineIndane"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:text="Bharat Gas"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/tips_background"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:onClick="onlineBharat"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:text="HP Gas"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/tips_background"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:onClick="onlineHP"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cylinder SMS Booking"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="40sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:text="Indane Gas"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/tips_background"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:onClick="smsIndane"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:text="Bharat Gas"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/tips_background"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:onClick="smsBharat"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:text="HP Gas"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/tips_background"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:onClick="smsHp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="40sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:text="Mail Us"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/tips_background"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:onClick="emailUs"
        />

    </LinearLayout>


</ScrollView>